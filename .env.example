# Django Environment Variables for Production Deployment

# SECURITY WARNING: keep the secret key used in production secret!
# Generate a new secret key for production: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-super-secret-production-key-here

# SECURITY WARNING: don't run with debug turned on in production!
DEBUG=False

# Allowed hosts for production - replace with your Railway domain
ALLOWED_HOSTS=your-app-name.up.railway.app,*.up.railway.app

# CSRF trusted origins - replace with your Railway domain
CSRF_TRUSTED_ORIGINS=https://your-app-name.up.railway.app,https://*.up.railway.app

# Database URL (automatically provided by Railway MySQL service)
# DATABASE_URL=mysql://username:password@host:port/database_name

# Individual database settings (optional - Railway provides DATABASE_URL)
DB_NAME=railway
DB_USER=root
DB_PASSWORD=your-db-password
DB_HOST=your-db-host
DB_PORT=3306

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox
PAYPAL_BASE_URL=https://your-app-name.up.railway.app

# PayPal Subscription Plan IDs (create these in PayPal dashboard)
PAYPAL_STANDARD_PLAN_ID=P-XXXXXXXXXXXXXXXXXXXX
PAYPAL_PREMIUM_PLAN_ID=P-XXXXXXXXXXXXXXXXXXXX

# Email Configuration (optional)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
